{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "experimentalDecorators": true,
    "noLib": false,
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [".vitepress/*"]
    }
  }
}
