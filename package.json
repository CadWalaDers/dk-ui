{
  "name": "dk-plus",
  "version": "1.0.0",
  "description": "",
  "workspaces": [
    "packages/*",
    "play",
    "docs"
  ],
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "dev:play": "pnpm -C play dev",
    "build:play": "pnpm -C play build",
    "build": "gulp -f build/gulpfile.ts",
    "dev:docs": "pnpm -C docs dev:docs",
    "build:docs": "pnpm -C docs build:docs",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,css,scss,json,md,vue,yml,yaml}\"",
    "deploy:docs": "cross-env NODE_ENV=docs node ./deploy",
    "test": "jest",
    "prepare": "husky install",
    "lint": "prettier --write \"**/*.{ts,tsx,js,json,css,scss,json,md,vue,yml,yaml}\"",
    "lint-staged": "lint-staged",
    "commitlint": "commitlint --config commitlint.config.js -e -V"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@algolia/client-search": "^4.17.0",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@types/gulp": "^4.0.10",
    "@types/gulp-autoprefixer": "^0.0.33",
    "@types/gulp-clean-css": "^4.3.0",
    "@types/gulp-sass": "^5.0.0",
    "@types/node": "^18.15.11",
    "@types/sass": "^1.45.0",
    "@vue/compiler-sfc": "^3.2.47",
    "babel-preset-env": "^1.7.0",
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "fast-glob": "^3.2.12",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-inject-string": "^1.1.2",
    "gulp-sass": "^5.1.0",
    "gulp-typescript": "6.0.0-alpha.1",
    "husky": "^8.0.3",
    "ora": "^5.1.0",
    "prettier": "2.8.7",
    "readline": "^1.3.0",
    "rollup": ">=2.78.0 <3.0.0 || >=3.0.0 <4.0.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.56.2",
    "scp2": "^0.5.0",
    "ssh2": "^1.11.0",
    "sucrase": "^3.31.0",
    "ts-morph": "^18.0.0",
    "tslint": "^6.1.3",
    "typescript": "latest",
    "vue": "^3.2.25"
  },
  "lint-staged": {
    "*.{vue,js,jsx,ts,tsx,.md}": "eslint --cache --fix"
  },
  "dependencies": {
    "@dk-plus/components": "workspace:^1.0.0",
    "@dk-plus/theme-chalk": "workspace:^1.0.0",
    "@dk-plus/utils": "workspace:^1.0.0",
    "@dk-plus/vite-plugin-vue-dk-setup-name": "workspace:^0.1.0"
  }
}
